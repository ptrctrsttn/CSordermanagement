{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": ["ES2020", "DOM"],
    "types": ["node"]
  },
  "include": ["websocket-server.ts"],
  "exclude": ["node_modules"]
} 